<div class="modal-dialog" role="document">
   <div class="modal-content">
      <%= form_with(model: @flavor, local: true) do |form| %>
      <div class="modal-header">
         <h5 class="modal-title">ステータスを変更</h5>
         <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
         </button>
      </div>
      <div class="modal-body">
            <div class="form-group field">
               <%= form.label :status, class: "form-control-label" %>
               <%= form.radio_button :status, 1 %>
               <%= form.label :status, "やばい", class: "form-control-label"%>
               <%= form.radio_button :status, 2 %>
               <%= form.label :status, "普通", class: "form-control-label"%>
               <%= form.radio_button :status, 3 %>
               <%= form.label :status, "たくさん", class: "form-control-label"%>
            </div>
      </div>
         <div class="modal-footer actions">
            <%= form.submit class: "btn btn-danger" %>
            <%= link_to "購入", new_flavor_path, class:"btn btn-primary" %>
         </div>
         <% end %>
   </div>
</div>